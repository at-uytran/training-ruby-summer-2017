
<!DOCTYPE html>
<html>
<head>
	<title>Book Store</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	<meta charset="utf-8">
</head>
<body>
<header>
<div class="first">
	<div class="container">
		<div class="home">
		<%= image_tag 'logo.png'%>
			<h1>BOOKS STORE</h1>
			<h2>BOOKS for a fantastic life</h2>
		</div>
		<div class="support">
				</div>	
	</div>
</div>
<nav class="menu">
	<div class="container">
		<ul>
			<li><a href="/">TRANG CHỦ</a></li>
			<li><a href="#">GIỚI THIỆU</a></li>
			<li><p><%= link_to "QUẢN LÝ SÁCH", books_path %></p></a></li>
			<li><a href="#">GIỎ HÀNG</a></li>
			<li>
			<% if current_user %>
			  <%= current_user.name %> | <%= link_to "Logout", '/logout' %>
			<% else %>
			  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
			<% end %>

			</li>
		</ul>
		<div class="form-search">
			<form action="/books/search" method="get" accept-charset="utf-8">
				<input type="text" name="search_value" value="Search books " class="input">
				<button class="btn-search" >Search</button>
				
			</form>
		</div>
	</div>	
</nav>
<div class="middle" >
		<div class="container">
			<span>
				<a href="/">TRANG CHỦ/</a>
				<a href="books">BOOK LIST</a>
			</span>
		</div>
</div>
</header>
<main class="clr">

<div class="container">
<div class="left-menu">
	<aside class="left-sidebar">
		<ul>
			<li><%= link_to "New Book" , new_book_path %></li>
			<li><%= link_to "All Books" , books_path %></li>
			<li><%= link_to "All Users" , users_path %></li>
			<li>
			<% if current_user %>
				<%= link_to "My orders", order_path(current_user) %>
			<% else %>
			  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
			<% end %>
			</li>
		</ul>
	</aside>
</div>
<div class="new-list">
	<%= yield %>	
</div>
</div>
</main>
<footer class="clr">
<div class="container">
	<div class="footinfo">
		<div class="about">
			<label>VỀ NHÀ SÁCH</label>
			<ul>
			<li><a href="#">GIỚI THIỆU CHUNG</a></li>
			<li><a href="#">NHÂN LỰC</a></li>
			<li><a href="#">TRANG THIẾT BỊ VÀ CƠ SỞ VẬT CHẤT</a></li>
			</ul>
		</div>
		<div class="supportlink">
			<label>HỖ TRỢ</label>
			<ul>
			<li><a href="#">TƯ VẤN VỀ SÁCH</a></li>
			<li><a href="#">SÁCH THƯỜNG THỨC </a></li>
			<li><a href="#">ĐẶT MUA SÁCH</a></li>
			</ul>
		</div>
	</div>
</div>
</footer>
       <script>
        function back(){
          window.history.back();
        };
      </script>
</body>
</html>