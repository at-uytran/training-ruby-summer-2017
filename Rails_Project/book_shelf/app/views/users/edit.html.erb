<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br>

      
      <%= f.label :birthday %>
      <%= f.datetime_local_field :birthday, class: 'form-control' %><br>

      <%= f.label :gender %>
      <%= f.text_field :gender, class: 'form-control' %><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.label 'user name' %>
      <%= f.text_field :user_name, class: 'form-control' %><br>

     
      <%= f.submit "Save changes", class: "btn btn-primary" %><br>
    <% end %>

  </div>
</div>